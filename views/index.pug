doctype html
head 
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  title Validar QR AFIP
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
  script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
  script(type='text/javascript').
    window.history.pushState("", "", '/');

  style.
    .login-form {
    width: 75%;
    margin: 50px auto;
    font-size: 15px;
    }
    .login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
    }
    .login-form h2 {
    margin: 0 0 15px;
    }
    .form-control, .btn {
    min-height: 38px;
    border-radius: 2px;
    }
    .btn {
    font-size: 15px;
    font-weight: bold;
    }

.login-form
  form(action='api/qr/validate' method='post')
    h2.text-center Validar Comprobante AFIP
    .form-group
      input.form-control(type='text', name='url' placeholder='Copiar Link' required='required')
    .form-group
      button.btn.btn-primary(type='submit') Validar
    if errors.message
         small#messageHelp.text-danger
          = errors.message  
    if message.data
         small#messageHelp.text-info
          = message.data  
  br
